<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_head"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/back_iv_toolbar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="14dp"
        android:src="@mipmap/common_return"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_tv_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_little"
        android:layout_toEndOf="@id/back_iv_toolbar"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_moderate"
        app:layout_constraintStart_toEndOf="@id/back_iv_toolbar"
        app:layout_goneMarginStart="@dimen/margin_middle" />

    <ImageView
        android:id="@+id/center_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="14dp"
        android:src="@mipmap/common_delete"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/right_iv" />

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="14dp"
        android:src="@mipmap/common_delete"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/right_tv" />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/padding_medium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_middle"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>